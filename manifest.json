{
  "manifest_version": 3,
  "name": "Ghost Glassdoor",
  "version": "0.0.1",
  "description": "This allows users to access Glassdoor without logging in.",
   "permissions": ["scripting"],
  "icons": {
    "16": "images/detective-emoji-16.png",
    "32": "images/detective-emoji-32.png",
    "48": "images/detective-emoji-48.png",
    "128": "images/detective-emoji-128.png"
},
"background": {
},
"web_accessible_resources": [
  {
    "resources": ["css/*.css"],
    "extension_ids": [
      "lohigdpnlkaabdijopklelgffjopnghf"
    ]
    }
  ],
"content_scripts": [
    {
        "matches": [
        "*://*.glassdoor.com/*"
      ],
      "css": ["css/global.css"]
    }
],
  "host_permissions": [
    "*://*.glassdoor.com/*"
  ],
  "action": {
      "default_popup": "popup.html"
  }

}